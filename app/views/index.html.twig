{% extends 'base.html.twig' %}

{% block content %}
<div class="row">
    {% for code, product in products %}
    <div class="col-sm-4">
        <div class="panel panel-primary">
            <div class="panel-heading">{{ product.name }}</div>
            <div class="panel-body"><a href="/{{ product.slug }}"><img src="https://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width:100%" alt="Image"></a></div>
            <div class="panel-footer">{{ product.description }}</div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
